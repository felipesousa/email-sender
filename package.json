{
  "name": "email-sender",
  "version": "0.1.0",
  "description": "stalkr Official Website Contact Form Handler",
  "homepage": "getstalk.kr",
  "repository": "stalkr-io/getstal.kr",
  "license": "MIT",
  "author": "ythecombinator <matheus.brasil10@gmail.com>",
  "private": true,
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-preset-latest": "^6.24.1",
    "micro": "^7.3.3",
    "nodemailer": "^4.0.1",
    "nodemailer-mailgun-transport": "^1.3.5",
    "webpack": "^2.6.1",
    "chalk": "^1.1.3",
    "ora": "^1.2.0",
    "source-map-support": "^0.4.15"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "eslint-config-samtgarson": "0.0.6",
    "nodemon": "^1.11.0",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "test-listen": "^1.0.2",
    "xo": "^0.18.2"
  },
  "scripts": {
    "start": "node dist",
    "dev": "node build --watch",
    "build": "node build",
    "test": "ava && xo",
    "test:spec": "ava",
    "test:lint": "xo"
  },
  "xo": {
    "ignores": [
      "index.js"
    ],
    "extends": "samtgarson",
    "rules": {
      "no-console": 0
    },
    "overrides": [
      {
        "files": "build/*.js",
        "rules": {
          "import/no-extraneous-dependencies": 0,
          "unicorn/no-process-exit": 0
        }
      }
    ]
  },
  "babel": {
    "presets": [
      "latest",
      "stage-2"
    ]
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  }
}
